extends reserved

block subviewcss
    link(rel='stylesheet', href='/css/dashboard.css')

block subview
    div(class="row")
        div(class="small-4 large-4 columns")
            div(class="card")
                div(class="share-overlay")
                div(class="title") Fatturato
                div(class="info")
                    i(class="streamline-infomation-circle tooltipstered" title="Il fatturato comprende tutte le vendite su tutti i canali disponibili.")
                div(class="content")
                    span(class="number") € 238.0598,39
                div(class="functions")
                    ul
                        li Aggiorna
                        
         div(class="small-4 large-4 columns")
            div(class="card")
                div(class="share-overlay")
                div(class="title") Conversione
                div(class="info")
                    i(class="streamline-infomation-circle tooltipstered" title="La conversione è divisa in Web Site ed è relativa ai dati Google Analytics e Booking Engine, relativa ai dati Hermes Hotels")
                div(class="content")
                    div(class="row")
                        div(class="small-6 large-6 columns")
                            span(class="number") 2.5%
                            div(class="sub") Booking Engine
                        div(class="small-6 large-6 columns")
                            span(class="number") 2.5%
                            div(class="sub") Sito web
                div(class="functions")
                    ul
                        li Aggiorna
                        
         div(class="small-4 large-4 columns")
            div(class="card")
                div(class="share-overlay")
                div(class="title") ADR
                div(class="info")
                    i(class="streamline-infomation-circle tooltipstered" title="L'ADR visualizzato è relativo alla media di tutti i canli di vendita disponibili.")
                div(class="content")
                    span(class="number") € 181,75
                div(class="functions")
                    ul
                        li Aggiorna

    div(class="row")
        div(class="small-8 large-8 columns")
            div(class="card")
                div(class="share-overlay")
                div(class="title") Produzione per canale
                div(class="info")
                    i(class="streamline-infomation-circle tooltipstered" title="Il garfico mostra la produzione divisa per ogni canale, per il periodo selezionato, con il relativo ADR")
                div(class="content")
                    div(id="channel-adr-chart" class="chart")
                div(class="functions")
                    ul
                        li Aggiorna
                            
    block subviewjs
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.devbridge-autocomplete/1.2.24/jquery.autocomplete.min.js')
        script(src='/components/dashboard.js')
extends reserved

block subviewcss
    link(rel='stylesheet', href='/css/dashboard.css')

block subview
    div(class="dashboard-wrapper" id="dashboard")
        div(class="row")
          div(class="small-12 large-12 columns filters date")
            ul
              li
                i(class="streamline-filter-22")
                span Stai visualizzando dal #[input(type="text" id="startDate")] al #[input(type="text" id="endDate")]
              li
                i(class="streamline-share-time")
                span Visualizza dati per #[a(href="#" class="change-view" data-type="month") Mese] - #[a(href="#" class="change-view" data-type="year") Anno]
        div(class="row")
            div(class="small-4 large-4 columns")
                div(class="card")
                    div(class="share-overlay")
                    div(class="title") Fatturato
                    div(class="info")
                        i(class="streamline-infomation-circle tooltipstered" title="Il fatturato comprende tutte le vendite su tutti i canali disponibili.")
                    div(class="content")
                        div(class="number" id="total-production") { scope.currentProductionTotal | currency }
                        div(class="variation" id="total-variation" rv-posneg="scope.currentTotalDifference") { scope.currentTotalDifference | percent } { scope.differenceMessage }
                    div(class="functions")

            div(class="small-4 large-4 columns")
                div(class="card")
                    div(class="share-overlay")
                    div(class="title") Conversione
                    div(class="info")
                        i(class="streamline-infomation-circle tooltipstered" title="La conversione Web riguarda il rapporto tra visite al sito WEB e prenotazioni. La conversione Booking Engine riguarda il rapporto tra visite al BOL e prenotazioni.")
                    div(class="content")
                        div(class="row")
                            div(class="small-6 large-6 columns")
                                div(class="number" id="booking-conversion") 0%
                                div(class="sub") Booking Engine
                            div(class="small-6 large-6 columns")
                                div(class="number" id="web-conversion") 0%
                                div(class="sub") Sito web
                    div(class="functions")

            div(class="small-4 large-4 columns")
                div(class="card")
                    div(class="share-overlay")
                    div(class="title") ADR
                    div(class="info")
                        i(class="streamline-infomation-circle tooltipstered" title="L'ADR visualizzato Ã¨ relativo alla media di tutti i canli di vendita disponibili.")
                    div(class="content")
                        div(class="number" id="total-adr") { scope.currentAdrTotal | currency }
                        div(class="variation" id="adr-variation" rv-posneg="scope.currentAdrDifference") { scope.currentAdrDifference | percent } { scope.differenceMessage }
                    div(class="functions")


        div(class="row")
            div(class="small-8 large-8 columns")
                div(class="card")
                    div(class="share-overlay")
                    div(class="title") Produzione per canale
                    div(class="info")
                        i(class="streamline-infomation-circle tooltipstered" title="Il garfico mostra la produzione divisa per ogni canale, per il periodo selezionato, con il relativo ADR")
                    div(class="content")
                        div(id="channel-adr-chart" class="chart")
                    div(class="functions")


    block subviewjs
        script(src='/components/dashboard.js')
